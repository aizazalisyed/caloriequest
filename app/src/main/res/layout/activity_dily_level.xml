<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DailyActivityLevelActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's Your Activity Level?"
        android:textSize="26sp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"/>

    <Button
        android:id="@+id/sedentaryButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="little or no exercise"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:layout_below="@id/heading"
        android:layout_marginTop="110dp"
        android:textSize="12sp"
        />
    <Button
        android:id="@+id/lightlyActiveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="light exercise/sports 1-3 days/week"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:layout_below="@id/sedentaryButton"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        />
    <Button
        android:id="@+id/moderatelyActiveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="moderate exercise/sports 3-5 days/week"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:layout_below="@id/lightlyActiveButton"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        />
    <Button
        android:id="@+id/veryActiveActiveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="hard exercise/sports 6-7 days a week"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:layout_below="@id/moderatelyActiveButton"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        />
    <Button
        android:id="@+id/suparActiveActiveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="very hard exercise/sports &amp; physical job or 2x training"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:layout_below="@id/moderatelyActiveButton"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        />


</RelativeLayout>